<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<VBox fx:id="createWindow" alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreateController">
    <stylesheets><URL value="@/css/main.css" /> </stylesheets>
    <HBox alignment="CENTER" minHeight="120.0">
        <Label fx:id="labelName" text="Directory name:" minWidth="100.0"/>
        <TextField fx:id="folder" maxWidth="200" promptText="Directory name" />
    </HBox>
    <HBox alignment="CENTER" prefHeight="50.0">
        <Button onAction="#create" prefWidth="82" text="ОК" />
        <Button onAction="#cancel" prefWidth="82" text="Cancel">
            <HBox.margin>
                <Insets left="20.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
