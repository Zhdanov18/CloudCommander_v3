<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loginWindow" alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <stylesheets><URL value="@/css/main.css" /> </stylesheets>
   <HBox alignment="CENTER">
       <Label fx:id="labelLogin" text="Login:" minWidth="75.0"/>
       <TextField fx:id="login" promptText="Login"/>
   </HBox>
   <HBox alignment="CENTER" prefHeight="90.0">
       <Label fx:id="labelPassword" text="Password:" minWidth="75.0"/>
       <PasswordField fx:id="password" promptText="Password" />
   </HBox>
    <Button onAction="#auth" prefWidth="82.0" text="ОК" />
 </VBox>